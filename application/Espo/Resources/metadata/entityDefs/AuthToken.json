{
    "fields": {
        "token": {
            "type": "varchar",
            "maxLength": "36",
            "index": true,
            "readOnly": true
        },
        "hash": {
            "type": "varchar",
            "maxLength": 150,
            "index": true,
            "readOnly": true
        },
        "userId": {
            "type": "varchar",
            "maxLength": "36",
            "readOnly": true
        },
        "user": {
            "type": "link",
            "readOnly": true
        },
        "portal": {
            "type": "link",
            "readOnly": true
        },
        "ipAddress": {
            "type": "varchar",
            "maxLength": "36",
            "readOnly": true
        },
        "isActive": {
            "type": "bool",
            "default": true
        },
        "lastAccess": {
            "type": "datetime",
            "readOnly": true
        },
        "createdAt": {
            "type": "datetime",
            "readOnly": true
        },
        "modifiedAt": {
            "type": "datetime",
            "readOnly": true
        }
    },
    "links": {
        "user": {
            "type": "belongsTo",
            "entity": "User"
        },
        "portal": {
            "type": "belongsTo",
            "entity": "Portal"
        },
        "actionHistoryRecords": {
            "type": "hasMany",
            "entity": "ActionHistoryRecord",
            "foreign": "authToken"
        }
    },
    "collection": {
        "sortBy": "lastAccess",
        "asc": false,
        "textFilterFields": ["ipAddress", "userName"]
    },
    "indexes": {
        "token": {
            "columns": ["token", "deleted"]
        }
    }
}
